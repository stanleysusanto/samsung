<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="56dp"
    android:paddingRight="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NEW PATIENT"
        android:textColor="@color/color_on_secondary"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="CONTACT DETAILS"
        android:textColor="@color/color_on_secondary"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Phone number "
        android:textColor="@color/color_on_secondary"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_phoneNumber"
        android:layout_width="match_parent" android:inputType="" 
        android:layout_height="wrap_content"
        android:hint="johnappleased@gmail.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email "
        android:textColor="@color/color_on_secondary"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent" android:inputType="" 
        android:layout_height="wrap_content"
        android:hint="johnappleased@gmail.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street Address 1 "
        android:textColor="@color/color_on_secondary"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_street1"
        android:layout_width="match_parent" android:inputType=""
        android:layout_height="wrap_content"
        android:hint="johnappleased@gmail.com" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street Address 2 "
        android:textColor="@color/color_on_secondary"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_street2"
        android:layout_width="match_parent" android:inputType=""
        android:layout_height="wrap_content"
        android:hint="johnappleased@gmail.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City "
        android:textColor="@color/color_on_secondary"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_city"
        android:layout_width="match_parent" android:inputType="" 
        android:layout_height="wrap_content"
        android:hint="your allergies" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State "
        android:textColor="@color/color_on_secondary"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_state"
        android:layout_width="match_parent" android:inputType=""
        android:layout_height="wrap_content"
        android:hint="your allergies" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZipCode "
        android:textColor="@color/color_on_secondary"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_zipcode"
        android:layout_width="match_parent" android:inputType=""
        android:layout_height="wrap_content"
        android:hint="your allergies" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_alignParentLeft="true"
            android:text="Back" />

        <Button
            android:id="@+id/next_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"
            android:text="Next" />
    </RelativeLayout>

</LinearLayout>