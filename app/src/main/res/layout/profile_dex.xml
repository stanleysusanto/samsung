<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="centerCrop" />


        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/color_primary"
            android:elevation="0dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_menu"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="40dp"
                android:text="CURRENT VISIT"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="HISTORY"
                android:textColor="#BFFFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:text="BIO"
                android:textColor="#BFFFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_layout"
            android:background="#fff"
            android:layout_marginLeft="160dp"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="833dp"
                android:layout_height="791dp"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="623dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    android:background="#ddd"
                    android:minHeight="20dp">

                    <LinearLayout
                        android:layout_width="623dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:paddingLeft="1dp"
                                    android:text="Reason for Visit"
                                    android:textColor="#000"
                                    android:textSize="11sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:paddingLeft="1dp"
                                    android:text="Right Arm X-Ray"
                                    android:textColor="#000"
                                    android:textSize="17sp" />
                            </LinearLayout>


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="100dp"
                                android:src="@drawable/ic_share_dark"></ImageView>
                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:text="❤Damaged right arm playing football"></TextView>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <ImageView
                    android:layout_width="622dp"
                    android:layout_height="588dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/handgroup" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Annotate" />

                    <EditText
                        android:layout_width="481dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="Add Comment" />
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.Placeholder
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="699dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/prescription_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="➕PRESCRIPTION"></Button>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="➕TREATMENT"></Button>
                </LinearLayout>

                <TextView
                    android:layout_width="121dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="-15dp"
                    android:paddingLeft="10dp"

                    android:text="Observations" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="652dp"
                    android:layout_height="347dp"
                    android:layout_marginLeft="@dimen/mtrl_card_spacing"
                    android:layout_marginTop="@dimen/mtrl_card_spacing"
                    android:layout_marginRight="@dimen/mtrl_card_spacing"
                    android:background="#ddd"
                    android:minHeight="100dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="SOME TEXT WITH OBSERVATIONS"></TextView>
                </com.google.android.material.card.MaterialCardView>

                <EditText
                    android:layout_width="650dp"
                    android:layout_height="58dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Add New Observation" />

                <LinearLayout
                    android:layout_width="660dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="125dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/mtrl_card_spacing"
                        android:layout_marginTop="@dimen/mtrl_card_spacing"
                        android:layout_marginRight="@dimen/mtrl_card_spacing"
                        android:background="#ddd"
                        android:minHeight="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:text="Blood Pressure"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:text="123/77"
                                android:textColor="#000"
                                android:textSize="27dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <androidx.constraintlayout.widget.Placeholder
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/mtrl_card_spacing"
                        android:layout_marginTop="@dimen/mtrl_card_spacing"
                        android:layout_marginRight="@dimen/mtrl_card_spacing"
                        android:background="#ddd"
                        android:minHeight="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:text="Pulse"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:text="88"
                                android:textColor="#000"
                                android:textSize="28dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <androidx.constraintlayout.widget.Placeholder
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/mtrl_card_spacing"
                        android:layout_marginTop="@dimen/mtrl_card_spacing"
                        android:layout_marginRight="@dimen/mtrl_card_spacing"
                        android:background="#ddd"
                        android:minHeight="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:text="Temperature"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:text="98.2℉"
                                android:textColor="#000"
                                android:textSize="28dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <androidx.constraintlayout.widget.Placeholder
                        android:layout_width="40dp"
                        android:layout_height="wrap_content" />
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/mtrl_card_spacing"
                        android:layout_marginTop="@dimen/mtrl_card_spacing"
                        android:layout_marginRight="@dimen/mtrl_card_spacing"
                        android:background="#ddd"
                        android:minHeight="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginLeft="10dp"
                                android:text="BMI"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="60dp"
                                android:layout_marginLeft="10dp"
                                android:text="32.17"
                                android:textColor="#000"
                                android:textSize="28dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</ScrollView>